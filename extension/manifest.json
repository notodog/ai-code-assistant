{
  "manifest_version": 3,
  "name": "AI Code Assistant",
  "version": "0.4.0",
  "description": "Bridge AI-generated code directly into your development workflow",
  "permissions": ["activeTab", "storage", "nativeMessaging"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://copilotstudio.microsoft.com/*",
    "https://copilot.microsoft.com/*",
    "https://m365.cloud.microsoft/*",
    "https://*.bing.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Code Assistant"
  },
  "content_scripts": [
    {
    "matches": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://gemini.google.com/*",
      "https://copilotstudio.microsoft.com/*",
      "https://copilot.microsoft.com/*",
      "https://m365.cloud.microsoft/*",
      "https://*.bing.com/chat*"
    ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
