{
  "manifest_version": 3,
  "name": "AI Code Assistant",
  "version": "0.4.0",
  "description": "Bridge AI-generated code directly into your development workflow",
  "permissions": ["activeTab", "storage", "nativeMessaging"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://copilotstudio.microsoft.com/*",
    "https://copilot.microsoft.com/*",
    "https://m365.cloud.microsoft//*",
    "https://*.bing.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "AI Code Assistant" },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilotstudio.microsoft.com/*",
        "https://copilot.microsoft.com/*",
        "https://m365.cloud.microsoft/*",
        "https://*.bing.com/chat*"
      ],
      "js": [
        "content/aic.js",

        "content/utils/dom.js",
        "content/utils/path.js",
        "content/utils/clipboard.js",
        "content/utils/toast.js",

        "content/native.js",

        "content/storage/projects.js",
        "content/storage/recentPaths.js",

        "content/detection/language.js",
        "content/detection/shell.js",
        "content/detection/filenameDetector.js",

        "content/platform/detectPlatform.js",
        "content/platform/insert.js",

        "content/ui/saveModal.js",
        "content/ui/executeModal.js",

        "content/inject/buttonInjector.js",
        "content/inject/processor.js",

        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
